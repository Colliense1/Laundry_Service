<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250.0dip"
        android:layout_marginTop="5dp"
        android:background="#fffefefe"
        card_view:cardCornerRadius="6.0dip"
        card_view:cardElevation="12.0dip"
        card_view:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="horizontal">

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5">


                <TextView
                    android:id="@+id/ShopNameTV"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Masum Laundry" />

                <TextView
                    android:id="@+id/ShopAddressTV"
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="124,cha ,East Rajabazar, Dhaka" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Number" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textColor="#000"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Shirts" />

                    <TextView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textColor="#000"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="cost" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textColor="#000"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Pants" />

                    <TextView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textColor="#000"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="cost" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textColor="#000"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Blankets" />

                    <TextView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textColor="#000"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="cost" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textColor="#000"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Curtains" />

                    <TextView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textColor="#000"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="cost" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
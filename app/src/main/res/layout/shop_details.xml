<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200.0dip"
        android:layout_marginTop="5dp"
        android:background="#fffefefe"
        card_view:cardCornerRadius="6.0dip"
        card_view:cardElevation="12.0dip"
        card_view:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal">

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10">


                <TextView
                    android:id="@+id/ShopNameTV"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Masum Laundry" />

                <TextView
                    android:id="@+id/ShopAddressTV"
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="124,cha ,East Rajabazar, Dhaka" />

                <TextView
                    android:id="@+id/textView_phoneNumber"
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Number" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textColor="#000"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Shirts" />

                    <TextView
                        android:id="@+id/textView_shirtCost"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textColor="#000"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="cost" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textColor="#000"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Pants" />

                    <TextView
                        android:id="@+id/textView_pantCost"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textColor="#000"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="cost" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textColor="#000"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Blankets" />

                    <TextView
                        android:id="@+id/textView_blanketCost"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textColor="#000"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="cost" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textColor="#000"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Curtains" />

                    <TextView
                        android:id="@+id/textView_curtainsCost"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textColor="#000"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="cost" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                >


                <TextView
                    android:id="@+id/textView_editShop"
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:drawableLeft="@drawable/ic_edit_black_24dp"/>

                <TextView
                    android:id="@+id/textView_deleteShop"
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:layout_below="@+id/textView_editShop"
                    android:paddingLeft="20dp"
                    android:drawableLeft="@drawable/ic_delete_black_24dp"/>

            </RelativeLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2.0dip"
        android:layout_marginTop="8.0dip"
        android:background="#dc4ca1fb" />

</LinearLayout>